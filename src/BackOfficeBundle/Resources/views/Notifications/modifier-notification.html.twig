{% extends "BackOfficeBundle:Pages:base.html.twig" %}
{% block content %}
    <div id="wrapper">
        <nav>
            {% include 'BackOfficeBundle:Pages:bonjour.html.twig' %} 
            {% include 'BackOfficeBundle:Pages:navigation.html.twig' %}
            {% include 'BackOfficeBundle:Pages:navbar.html.twig' %} 
        </nav>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default margin">
                        <div class="panel-heading">
                            Modifier une nouvelle notification
                        </div>
                        <div class="panel-body">
                       		{{ form_start(edit_form) }}      
                                <fieldset>
								    <legend>Modifier une notification:</legend>
                                    <div class="form-group">
                                        <label>Fiche</label>
                                        <select class="form-control" name="fiche">
                                         {% for fiche in fiches %}
                                            {% if fiche.nom == notification.0.nom %}
                                             <option selected value="{{ fiche.idfiche }}">{{ fiche.nom }}</option>
                                             {% else %}
                                             <option value="{{ fiche.idfiche }}">{{ fiche.nom }}</option>
                                             {% endif %}
                                         {% endfor %}
                                         </select>
                                       </div>
                                      {{ form_widget(edit_form) }}
                                        <button type="submit" class="btn btn-default btn-info" value="enregistrer">Enregistrer</button>
                                </fieldset>
							 {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block script %}
    <script>
    $(document).ready(function () {
        $(".nav li").removeClass("selected") 
        $('#notifications').addClass('selected');
    });
    </script>
{% endblock %}
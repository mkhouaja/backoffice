{% extends "BackOfficeBundle:Pages:base.html.twig" %}
{% block content %}
    <div id="wrapper">
        <nav>
            {% include 'BackOfficeBundle:Pages:bonjour.html.twig' %} 
            {% include 'BackOfficeBundle:Pages:navigation.html.twig' %}
            {% include 'BackOfficeBundle:Pages:navbar.html.twig' %} 
        </nav>
        <div id="page-wrapper">
            <div class="row">
            <a href="/categorie/ajout">
                <button type="button" class="btn btn-info btn-block right">Ajouter une catégorie</button>
            </a>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default margin">
                        <div class="panel-heading">
                            Liste des catégories
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Catégorie</th>
                                            <th>Ajoutée par</th>
                                            <th>Date d'ajout</th>
											<th>Date modification</th>
                                            <th></th>
											<th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for categorie in categories %}
                                            <tr>
                                                <td>{{ categorie.idcat }}</td>
                                                <td>{{ categorie.nom }}</td>
                                                <td>{{ categorie.dateajout|date('d/m/Y') }}</td>
    											<td>{{ categorie.datemodification|date('d/m/Y') }}</td>
                                                <td><a href="{{ path('modifier_categorie', { 'categorie': categorie.idcat }) }}"><button type="button" class="btn btn-warning btn-sm">Modifier</button></a></td>
                                                <td><a href="{{ path('supprimer_categorie', { 'categorie': categorie.idcat }) }}"><button type="button" class="btn btn-danger btn-sm">Supprimer</button></a></td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                                {% if error != "" %}<div class="alert alert-danger">{{error}}</div>{% endif%}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block script %}
    <script>
    $(document).ready(function () {
        $(".nav li").removeClass("selected") 
        $('#categories').addClass('selected');
    });
    </script>
{% endblock %}
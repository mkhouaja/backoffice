{% extends "BackOfficeBundle:Pages:base.html.twig" %}
{% block content %}
    <div id="wrapper">
        <nav>
            {% include 'BackOfficeBundle:Pages:bonjour.html.twig' %} 
            {% include 'BackOfficeBundle:Pages:navigation.html.twig' %}
            {% include 'BackOfficeBundle:Pages:navbar.html.twig' %} 
        </nav>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default margin">
                        <div class="panel-heading">
                            Modifier une catégorie
                        </div>
                        <div class="panel-body">
                          {{ form_start(edit_form) }}
                          <fieldset>
                                <legend>Modifier une catégorie:</legend>
                                {{ form_widget(edit_form) }}
                                    <input type="submit" value="Modifier" class="btn btn-default btn-warning"/>
                                 </fieldset>
                                {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block script %}
    <script>
    $(document).ready(function () {
        $(".nav li").removeClass("selected") 
        $('#categories').addClass('selected');
    });
    </script>
{% endblock %}